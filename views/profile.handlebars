<body>
<div class="container mt-5">
    <h1>{{ user.username }}'s Profile</h1>
    <h2>Your Posts:</h2>

    <ul class="list-group mt-3">
        {{#each user.posts}}
            <li class="list-group-item">
                <div class="d-flex justify-content-between">
                    <h4>{{ this.title }}</h4>
                </div>
                <img src="{{this.image}}" class="cover-image">
                <div>
                    <span id="upvote-post-{{this.id}}" class="badge bg-primary">Upvotes: {{ this.upvote }}</span>
                    <br/>
                    <button class="btn btn-secondary btn-sm" onclick="upvotePost('{{ this.id }}')">üëç Like</button>
                </div>
                <p>{{ this.content }}</p>
            </li>
        {{/each}}
    </ul>
</div>

<script src="/js/profile.js"></script>

</body>
